# ========================================
# Polymarket Copy Trading Bot Configuration
# ========================================

# Wallet Configuration
# Your private key (0x prefixed hex string)
# NEVER commit your actual private key - use .env for secrets
PRIVATE_KEY=0x...

# Your funder address (proxy wallet address displayed on Polymarket.com)
# This is NOT your EOA address - it's the proxy wallet shown in your profile
FUNDER_ADDRESS=0x...

# Signature Type:
# 0 = EOA (MetaMask standard wallet) - funder is your wallet address
# 1 = POLY_PROXY (Magic Link email/Google login) - requires exported PK
# 2 = GNOSIS_SAFE (Gnosis Safe multisig) - most common for new users
SIGNATURE_TYPE=1

# ========================================
# Copy Trading Settings
# ========================================

# Amount in USDC to use for each copy trade (when PERCENTAGE_TO_COPY is null)
# Example: 50 means $50 per trade
AMOUNT_TO_COPY=50

# Copy sell orders (true/false)
# Set to true to copy both buys and sells
COPY_SELL=true

# Percentage of trader's order size to copy (1-100)
# If set to a number (e.g., 50), copies 50% of the trader's position size
# If set to "null" (without quotes), uses AMOUNT_TO_COPY instead
PERCENTAGE_TO_COPY=100

# Order Type:
# FOK = Fill or Kill (limit order - must fill completely or not at all)
# FAK = Fill and Kill (market order - fills what it can, cancels rest)
TYPE_ORDER=FOK

# ========================================
# API Credentials (Auto-generated - leave blank)
# ========================================

POLY_API_KEY=
POLY_SECRET=
POLY_PASSPHRASE=

# ========================================
# Advanced Settings
# ========================================

# Polling interval in seconds for checking trader activity
POLL_INTERVAL=5

# Minimum trade size in USDC to copy (ignore smaller trades)
MIN_TRADE_SIZE=10

# Maximum trade size in USDC to copy (safety limit)
MAX_TRADE_SIZE=1000

# Enable logging to file
LOG_TO_FILE=true

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
