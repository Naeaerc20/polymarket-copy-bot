# ========================================
# Polymarket Copy Trading Bot Configuration
# ========================================

# ==========================================
# WALLET CONFIGURATION
# ==========================================

# Your wallet private key (0x prefixed)
# ⚠️  NEVER share this or commit to git!
# 
# How to get it:
# - MetaMask: Account Details -> Show Private Key
# - Make sure it starts with "0x"
PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE

# Your Polymarket Proxy Wallet Address (Funder Address)
# This is REQUIRED if you use Polymarket with Email/Google login (POLY_PROXY)
# 
# How to find it:
# 1. Go to https://polymarket.com/portfolio
# 2. Click on your profile icon
# 3. You'll see your "Wallet Address" - this is your FUNDER_ADDRESS
# 
# It should look like: 0x1234...abcd
# ⚠️  This is NOT your MetaMask address if you logged in with Email/Google!
FUNDER_ADDRESS=0xYOUR_POLYMARKET_PROXY_ADDRESS

# Signature Type (Authentication Method)
# 0 = EOA (MetaMask wallet connected directly)
# 1 = POLY_PROXY (Email/Google login - MOST COMMON) ← Use this for Polymarket accounts
# 2 = GNOSIS_SAFE (Gnosis Safe multisig wallet)
# 
# If you created your Polymarket account with Email or Google, use type 1
SIGNATURE_TYPE=1

# ==========================================
# COPY TRADING SETTINGS
# ==========================================

# Fixed amount in USDC to copy per trade
# Example: Copy every trade with exactly $50
AMOUNT_TO_COPY=50

# Percentage of the original trade to copy (100 = 100%)
# This OVERRIDES AMOUNT_TO_COPY if set
# Example: If trader buys $100 and this is 50, you buy $50
# Set to "null" (without quotes) to use AMOUNT_TO_COPY instead
PERCENTAGE_TO_COPY=null

# Copy sell orders in addition to buys
# true = copy both buys and sells
# false = only copy buys
COPY_SELL=true

# Order Type for execution
# GTC = Good Till Canceled (limit order - stays until filled or canceled)
# GTD = Good Till Date (limit order with expiration)
# FOK = Fill Or Kill (must fill entire order immediately or cancel)
# FAK = Fill And Kill (fill what you can, cancel the rest) - RECOMMENDED for copy trading
ORDER_TYPE=GTC

# ==========================================
# SAFETY LIMITS
# ==========================================

# Minimum trade size to copy in USDC
# Trades smaller than this will be ignored
MIN_TRADE_SIZE=5

# Maximum trade size to copy in USDC
# Trades larger than this will be capped
MAX_TRADE_SIZE=1000

# Maximum position size per market in USDC
# Won't copy if your position would exceed this
MAX_POSITION_SIZE=5000

# ==========================================
# BOT SETTINGS
# ==========================================

# Dry Run Mode
# true = simulate trades without executing
# false = execute real trades
DRY_RUN=true

# Polling interval in seconds for checking new trades
POLL_INTERVAL=5

# Delay in seconds before copying a trade
# Gives you time to react if needed
COPY_DELAY_SECONDS=1

# ==========================================
# LOGGING
# ==========================================

# Enable logging to file
LOG_TO_FILE=true

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log file path (relative to bot directory)
LOG_FILE=logs/bot.log

# ==========================================
# NOTIFICATIONS (Optional)
# ==========================================

# Discord Webhook URL for notifications
# Leave empty to disable
DISCORD_WEBHOOK=

# Telegram Bot Token for notifications
# Leave empty to disable
TELEGRAM_BOT_TOKEN=

# Telegram Chat ID for notifications
# Leave empty to disable
TELEGRAM_CHAT_ID=
